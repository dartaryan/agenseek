      "code": "using UnityEngine;\n\nnamespace MyGame.Player\n{\n    /// <summary>\n    /// Player Controller - implements movement from GDD Section 2.1\n    /// GDD Reference: Core Gameplay > Movement Mechanics\n    /// </summary>\n    public class PlayerController : MonoBehaviour\n    {\n        [Header(\"Movement Settings - From GDD\")]\n        [SerializeField] private float walkSpeed = 5f;      // GDD: 5 m/s\n        [SerializeField] private float runSpeed = 8f;       // GDD: 8 m/s\n        [SerializeField] private float jumpHeight = 3f;     // GDD: 3 meters\n        [SerializeField] private bool allowDoubleJump = true; // GDD: Yes\n        \n        private Rigidbody2D rb;\n        private bool isGrounded;\n        private bool hasDoubleJump;\n        \n        private void Awake()\n        {\n            rb = GetComponent<Rigidbody2D>();\n        }\n        \n        private void Update()\n        {\n            HandleMovement();\n            HandleJump();\n        }\n        \n        private void HandleMovement()\n        {\n            float horizontal = Input.GetAxis(\"Horizontal\");\n            float speed = Input.GetKey(KeyCode.LeftShift) ? runSpeed : walkSpeed;\n            \n            rb.velocity = new Vector2(horizontal * speed, rb.velocity.y);\n        }\n        \n        private void HandleJump()\n        {\n            if (Input.GetKeyDown(KeyCode.Space))\n            {\n                if (isGrounded)\n                {\n                    Jump();\n                    hasDoubleJump = allowDoubleJump;\n                }\n                else if (hasDoubleJump)\n                {\n                    Jump();\n                    hasDoubleJump = false;\n                }\n            }\n        }\n        \n        private void Jump()\n        {\n            // Physics formula: v = sqrt(2 * g * h)\n            float jumpVelocity = Mathf.Sqrt(2 * Mathf.Abs(Physics2D.gravity.y) * jumpHeight);\n            rb.velocity = new Vector2(rb.velocity.x, jumpVelocity);\n        }\n    }\n}"
