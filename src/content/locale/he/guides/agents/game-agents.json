    {
      "type": "code",
      "language": "csharp",
      "code": "// WaterFlowSystem.cs\npublic class WaterFlowSystem : MonoBehaviour\n{\n    [Header(\"Flow Settings\")]\n    public float flowSpeed = 2f;\n    public int maxFlowParticles = 100;\n    \n    private Grid grid;\n    private List<WaterParticle> activeParticles;\n    private ObjectPool<WaterParticle> particlePool;\n    \n    void Start()\n    {\n        grid = GetComponent<Grid>();\n        activeParticles = new List<WaterParticle>();\n        particlePool = new ObjectPool<WaterParticle>(maxFlowParticles);\n    }\n    \n    public void StartFlow(Vector2Int startCell)\n    {\n        // Start water flow from source\n        var particle = particlePool.Get();\n        particle.Initialize(startCell, flowSpeed);\n        activeParticles.Add(particle);\n    }\n    \n    void Update()\n    {\n        // Update all active particles\n        for (int i = activeParticles.Count - 1; i >= 0; i--)\n        {\n            var particle = activeParticles[i];\n            particle.Move(Time.deltaTime);\n            \n            // Check if reached goal or blocked\n            if (particle.ReachedGoal())\n            {\n                OnFlowComplete();\n                ReturnParticle(particle, i);\n            }\n            else if (particle.IsBlocked(grid))\n            {\n                OnFlowBlocked();\n                ReturnParticle(particle, i);\n            }\n        }\n    }\n    \n    private void ReturnParticle(WaterParticle particle, int index)\n    {\n        activeParticles.RemoveAt(index);\n        particlePool.Return(particle);\n    }\n    \n    private void OnFlowComplete()\n    {\n        // Player wins!\n        GameEvents.TriggerLevelComplete();\n    }\n}"
